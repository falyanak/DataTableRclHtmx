{
  "name": "C# .NET 8 & HTMX Project",
  "image": "mcr.microsoft.com/devcontainers/dotnet:8.0",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:1": {
      "configureZshAsDefaultShell": true
    },
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/dotnet:8.0": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csdevkit",
        "ms-dotnettools.csharp",
        "fernando-perez.htmx-tags",
        "visualstudioexptteam.vscodeintellicode"
      ]
    }
  },
  "forwardPorts": [5000, 5001],
  "portsAttributes": {
    "5001": {
      "protocol": "https"
    }
  },
  // On chaÃ®ne : Restauration .NET -> Install NPM -> Compilation TS initiale
  "postCreateCommand": "dotnet restore && cd src/WebApp.Client && npm install && npx tsc --watch"
}