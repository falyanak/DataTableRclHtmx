{
  "name": "C# .NET 8 & HTMX Project",
  "image": "mcr.microsoft.com/devcontainers/dotnet:1-8.0-bookworm",
  "features": {
    // On force l'installation de Node.js proprement via la Feature officielle
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20" 
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csdevkit",
        "ms-dotnettools.csharp",
        "fernando-perez.htmx-tags"
      ]
    }
  },
  // Correction du postCreateCommand : on sépare les étapes pour identifier le coupable
  "postCreateCommand": "dotnet dev-certs https && dotnet restore && cd src/WebApp.Client && npm install"
}